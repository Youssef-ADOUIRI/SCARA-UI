<UserControl x:Class="SCARA_UI.MVVM.View.Cinematics"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SCARA_UI.MVVM.View"
             xmlns:viewModel ="clr-namespace:SCARA_UI.MVVM.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1220">


    <UserControl.DataContext>
        <viewModel:CinematicsViewModel/>
    </UserControl.DataContext>

    <Grid x:Name="CinematicsGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="425"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Line Stroke="Black" StrokeThickness="1"
              HorizontalAlignment="Left"
              VerticalAlignment="Center"
              Grid.Column="1"
              SnapsToDevicePixels="True"
              Visibility="Visible"
              X1="0" Y1="450" Height="485"
              />
        <Line Stroke="Black" StrokeThickness="1"
              HorizontalAlignment="Center"
              VerticalAlignment="Top"
              Grid.Column="0"
              SnapsToDevicePixels="True"
              Visibility="Visible"
              X1="0" X2="400" Width="200"
              Margin="0,280,0,240"
              />

        <TextBlock Text="CINEMATICS"
                   Grid.Column="1"
                   FontSize="40"
                   HorizontalAlignment="Center"
                   Margin="0,5,0,630"
                   Foreground="#CFCFCF"/>


        <TextBlock x:Name="Coordnates" 
                   Text="{Binding coordonates}"
                   Grid.Column="1"
                   FontSize="16"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Foreground="DarkGray"/>


        <!--control panel-->

        <TextBlock Text="CONTROLS"
                   Grid.Column="0"
                   FontSize="40"
                   HorizontalAlignment="Center"
                   Margin="0,5,0,630"
                   Foreground="#CFCFCF"/>

        <TextBlock Text="XYS :"
                   Grid.Column="0"
                   FontSize="13"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Margin="10,70,0,0"
                   Foreground="Black"
                   Opacity="0.7"/>
        <Line Stroke="Black" StrokeThickness="1"
              HorizontalAlignment="Center"
              VerticalAlignment="Top"
              Grid.Column="0"
              SnapsToDevicePixels="True"
              Visibility="Visible"
              X1="0" X2="400" Width="200"
              Margin="0,80,0,0"
              />

        <TextBox x:Name="X_Axis"
                 Grid.Column="0"
                 Height="50" Width="178"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Margin="23,100 , 0, 0"
                 Text="{Binding x , UpdateSourceTrigger=PropertyChanged }"
                 Style="{StaticResource YoussefTxtBox}" BorderBrush="{x:Null}"/>
        <TextBox x:Name="Y_Axis"
                 Grid.Column="0"
                 Height="50" Width="178"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Top"
                 Margin="0,100 , 23, 0"
                 Text="{Binding y , UpdateSourceTrigger=PropertyChanged }"
                 Style="{StaticResource YoussefTxtBox}"/>

        <TextBox x:Name="Speed"
                 Grid.Column="0"
                 Height="50" Width="178"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Margin="23,190 , 0, 0"
                 Text="{Binding s , UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource YoussefTxtBox}"/>

        <Button x:Name="Exec_button" Content="start"
                Style="{StaticResource MenuButtonStyle}"
                Grid.Column="0" 
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,180,23,0"
                Width="170" Height="70"
                Command="{Binding ButtonCommand}"
                CommandParameter="P"/>

        <TextBlock Text="SHAPES :"
                   Grid.Column="0"
                   FontSize="13"
                   Visibility="Visible"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Margin="10,270,0,0"
                   Foreground="Black"
                   Opacity="0.7"/>

        <Button Content="Cirecle"
                Style="{StaticResource MenuButtonStyle}"
                Grid.Column="0" 
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="23,0,0,0"
                Width="170" Height="70"
                Command="{Binding ButtonCommand}"
                CommandParameter="D"/>
        <Button Content="Rect"
                Style="{StaticResource MenuButtonStyle}"
                Grid.Column="0" 
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0,0,23,0"
                Width="170" Height="70"
                Command="{Binding ButtonCommand}"
                CommandParameter="R"/>

        <!--Load G code -->
        <TextBlock Text="G-CODE :"
                   Grid.Column="0"
                   FontSize="13"
                   Visibility="Visible"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Left"
                   Margin="10,0,0,260"
                   Foreground="Black"
                   Opacity="0.7"/>
        <Line Stroke="Black" StrokeThickness="1"
              HorizontalAlignment="Center"
              VerticalAlignment="Bottom"
              Grid.Column="0"
              SnapsToDevicePixels="True"
              Visibility="Visible"
              X1="0" X2="400" Width="200"
              Margin="0,0,0,270"
              Opacity="0.7"
              />
        <Button Content="Load"
                Style="{StaticResource MenuButtonStyle}"
                Grid.Column="0" 
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="23,0,0,180"
                Width="170" Height="70"
                Command="{Binding ButtonCommand}"
                CommandParameter="G"/>
        <Button Content="Executer"
                Style="{StaticResource MenuButtonStyle}"
                Grid.Column="0" 
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,23,180"
                Width="170" Height="70"
                Command="{Binding ButtonCommand}"
                CommandParameter="E"/>
